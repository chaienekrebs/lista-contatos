@page "/cadastrar-pessoa/{id?}"

@{
    Layout = "_Layout";
}


<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h6 class="titulo-navbar"><span id="titulo"></span></h6>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a id="inicio" href="/">Início</a></li>
                <li class="breadcrumb-item active"><span id="titulo-nav"></span></li>
            </ol>
        </div>
    </div>
</div>

<form>
    <div class="card">
        <div class="card" style="margin-bottom:0px">
            <div class="card-body">
                <div class="row">
                    <input id="id-pessoa" style="display:none" />
                    <div class="col-xl-4 col-lg-6 col-md-12 mb-2">
                        <h6 class="card-title col-md-12 no-padding">Nome:<span class="label-danger-form"> *</span></h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="nome" id="nome" required>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-6 col-md-12 mb-2">
                        <h6 class="card-title col-md-12 no-padding">CPF:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="cpf" id="cpf" >
                        </div>
                    </div>
                  
                    <div class="col-xl-4 col-lg-6 col-md-12 mb-2">
                        <h6 class="card-title col-md-12 no-padding">Endereço:</h6>
                        <div class="input-group">
                            <input class="form-control" type="text" name="endereco" id="endereco">
                        </div>
                    </div>

                    <div class="col-xl-12 col-lg-12 col-md-12 mt-4" id="div-salvar">
                        <button type="submit" class="btn btn-success col-xl-4 col-lg-4 col-md-12" style="float:right" id="btn-submit">Salvar</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>

@section Scripts {
<script src="~/js/pages/Pessoa/cadastrar-pessoa.js?v@(FileVersion.Versao())"></script>
}
